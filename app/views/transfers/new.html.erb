<h1>New Transfer</h1>

<%= form_for @transfer do |f| %>
  <%= render_errors @transfer %>

  <div class="field">
    <%= f.label :from_envelope_id %>
    <%= f.collection_select :from_envelope_id, Envelope.all, :id, :full_name %>
  </div>

  <div class="field">
    <%= f.label :to_envelope_id %>
    <%= f.collection_select :to_envelope_id, Envelope.all, :id, :full_name %>
  </div>

  <div class="field">
    <%= f.label :amount_cents, "Amount" %>
    <%= react_component "Components.MoneyInput", name: "transfer[amount_cents]", id: "transfer_amount_cents", default_value: @transfer.amount_cents %>
  </div>

  <%= f.submit class: "btn btn--primary" %>
<% end %>
